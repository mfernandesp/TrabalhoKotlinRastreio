<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Cadastro_paciente">


    <TextView
            android:text="Cardastrar Paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardatrarPacienteLabel" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Nome Completo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/nomeTextCardastrarPaciente"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cardatrarPacienteLabel"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nomeTextCardastrarPaciente"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/cardatrarPacienteLabel" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="E-mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/emailTextCardastrarPaciente"
            app:layout_constraintBottom_toTopOf="@+id/emailTextCardastrarPaciente"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailTextCardastrarPaciente"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/nomeTextCardastrarPaciente"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494"/>
    <TextView
            android:text="Data de Nascimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintBottom_toTopOf="@+id/dataTextCardastrarPaciente"
            app:layout_constraintStart_toStartOf="@+id/dataTextCardastrarPaciente"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dataTextCardastrarPaciente"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/emailTextCardastrarPaciente"
            app:layout_constraintHorizontal_bias="0.494"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/telTextCardastrarPaciente"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/dataTextCardastrarPaciente"
            app:layout_constraintHorizontal_bias="0.494"/>
    <TextView
            android:text="Telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/telTextCardastrarPaciente"
            app:layout_constraintBottom_toTopOf="@+id/telTextCardastrarPaciente"/>
    <TextView
            android:text="Plano de SaÃºde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintBottom_toTopOf="@+id/planoSaudeTextCardastrarPaciente"
            app:layout_constraintStart_toStartOf="@+id/planoSaudeTextCardastrarPaciente"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/cpfTextCardastrarPaciente"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/planoSaudeTextCardastrarPaciente" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"/>
    <Button
            android:text="Cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cadastrarPaciente"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cpfTextCardastrarPaciente"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="96dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/planoSaudeTextCardastrarPaciente"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/telTextCardastrarPaciente" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="CPF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/cpfTextCardastrarPaciente"
            android:layout_marginStart="1dp" app:layout_constraintBottom_toTopOf="@+id/cpfTextCardastrarPaciente"/>

</android.support.constraint.ConstraintLayout>