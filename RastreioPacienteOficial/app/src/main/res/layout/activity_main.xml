<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:scrollbarTrackVertical="@mipmap/ic_hist">

    <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonVisualizarAtendimento"
            android:foreground="@drawable/pesquisar_paciente"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@+id/labelvisualizar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/labelvisualizar"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"/>
    <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/buttonCriarPaciente"
            android:foreground="@drawable/adicionar_paciente"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/labelcriar"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="139dp"
            android:layout_height="0dp" tools:src="@drawable/doctor"
            android:id="@+id/imageView"
            android:foreground="@drawable/doctor"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/buttonSair"
            android:layout_marginTop="28dp" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/labelBemvido"/>
    <TextView
            android:text="Bem vindo!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelBemvido"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="65dp"
            app:layout_constraintBottom_toTopOf="@+id/labelvisualizar"/>
    <TextView
            android:text="Adicionar Paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelcriar"
            android:layout_marginEnd="21dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonCriarPaciente"/>
    <TextView
            android:text="Pesquisar Paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelvisualizar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="47dp" app:layout_constraintBottom_toTopOf="@+id/buttonVisualizarAtendimento"/>
    <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/buttonSair"
            android:foreground="@android:drawable/ic_menu_close_clear_cancel"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="@+id/labelSair"
            android:layout_marginEnd="10dp"/>
    <TextView
            android:text="Sair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelSair"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="74dp" android:layout_marginEnd="7dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonSair"/>
</android.support.constraint.ConstraintLayout>