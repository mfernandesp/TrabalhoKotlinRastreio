<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TelaSelecaoOpccao">

    <Button
            android:layout_width="114dp"
            android:layout_height="118dp"
            android:id="@+id/buttonAdiconarAtendimento" android:foreground="@mipmap/ic_paciente1"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/textView"/>
    <Button
            android:text="Editar Atendimento"
            android:layout_width="115dp"
            android:layout_height="116dp"
            android:id="@+id/buttonEditarAtendimento"
            android:foreground="@mipmap/ic_editar_atendimento" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginBottom="7dp" app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintBottom_toBottomOf="@+id/buttonAdiconarAtendimento"/>
    <Button
            android:text="Editar Paciente"
            android:layout_width="108dp"
            android:layout_height="101dp"
            android:id="@+id/editarPaciente"
            android:foreground="@mipmap/ic_editar_paciente" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="65dp" app:layout_constraintTop_toBottomOf="@+id/buttonAdiconarAtendimento"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Adicioanar Atendimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/textView2"
            android:layout_marginEnd="10dp"/>
    <TextView
            android:text="Editar Atendimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="202dp" android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView"
    />
    <TextView
            android:text="Editar Paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/editarPaciente"
            android:layout_marginStart="9dp" app:layout_constraintBottom_toTopOf="@+id/editarPaciente"/>
</android.support.constraint.ConstraintLayout>
